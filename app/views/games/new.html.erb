<div class="main-container">
  <h1>Welcome to the longest word-game!</h1>
  
  <h2>Here is your grid:</h2>
  <ul class="letters">
    <% @letters.each do |letter| %>
      <li><%= letter %></li>
    <% end %>
  </ul>
  
  <h2>What is your longest word?</h2>
  
  <form action="/score" method = "post" class="form-inline">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <div class="input-group input-group">
      <input type="text" name="word" class="form-control">
      <span class="input-group-btn">
        <input type="submit" value="Play" class="btn btn-default">
      </span>
    </div>
  </form>
</div>
